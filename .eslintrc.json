{
  "env": {
      "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:nestjs/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": false
      },
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": ["nestjs", "@typescript-eslint"],
  "rules": {
      "no-unused-vars": "off",
      "no-undef": "off",
      "nestjs/use-validation-pipe": "off"
  }
}